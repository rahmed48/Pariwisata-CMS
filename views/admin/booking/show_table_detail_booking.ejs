<!-- DataTales Example -->
<div class="card shadow mb-4 mt-1">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-primary">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img src="https://staycation-rest-api.herokuapp.com/<%= booking.payments.proofPayment %>" alt="image"
          style="width:100%; display:block;">

        <% if(booking.payments.status == 'Proses') { %>
        <div class="card-footer py-3">
          <div class="row">
            <div class="col-8">
              <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="POST">
                <button type="submit" class="btn btn-info btn-sm">
                  <i class="fas fa-check"></i>
                  Confirmation
                </button>
              </form>
            </div>
            <div class="col-auto">
              <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" method="POST">
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-times"></i>
                  Reject
                </button>
              </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                <td>$<%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End DataTales Example -->